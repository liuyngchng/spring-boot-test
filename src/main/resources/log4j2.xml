<?xml version="1.0" encoding="UTF-8"?>
<Configuration status="WARN" monitorInterval="30">
    <Appenders>
        <Console name="Console" target="SYSTEM_OUT">
            <!--<PatternLayout pattern="%d{yyyyMMdd HH:mm:ss.SSS} [%t] %-5level %l - %msg%n"/>-->
            <PatternLayout pattern="%d{yyyyMMdd HH:mm:ss.SSS} [%t] [%-5level] [%C.%M]:%L - %msg%n"/>
        </Console>
    </Appenders>
    <Loggers>
        <Root level="info">
            <AppenderRef ref="Console"/>
        </Root>
        <Logger name = "hello" level = "debug" additivity="false">
            <AppenderRef ref="Console"/>
        </Logger>
    </Loggers>
    <!--http://logging.apache.org/log4j/2.x/manual/configuration.html#SystemProperties-->
</Configuration>